<div>
    <h1>Update Post</h1>
    <hr>
    {{#if errors}}
        <div class="alert alert-danger">
            <ul>
                {{#each errors }}
                    <li style="list-style-type:none">{{this.msg}}</li>
                {{/each }}
            </ul>
        </div>
    {{/if}}
    {{#if success}}
        <div class="alert alert-success">
            {{ success }}
        </div>
    {{/if}}




    <form  ref='uploadForm' id='uploadForm' action="/blogs/update" method="post" encType="multipart/form-data">
        <input type="hidden" name="id" value="{{post.id}}">
        <input type="hidden" name="old_image" value="{{post.image}}">
        <div class="form-group">
            <label for="name">Post Name: </label>
            <input class="form-control" type="text" name="name" id="name" value="{{post.name}}" required>
        </div>
        <div class="form-group">
            <label for="name">Post Content: </label>
            <textarea class="form-control" name="content" rows="8" cols="40" required>{{post.content}}</textarea>
        </div>
        <div class="form-group"> {{post.category.name}}
            <label for="category">Post Category: </label>
            <select name="category" id="category" class="form-control" required>
                {{#each optionsData }}
                    {{{this}}}
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="name">Post Image: </label>
            <input class="form-control" type="file" name="image" id="name" value="" required>
        </div>
        <div class="form-group">
            <label for="name">Old Post Image: </label>
            <img src="/files/{{post.image}}" style="max-width:250px;">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>


</div>
