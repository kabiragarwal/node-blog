<div>
    <h1>Add New Task</h1>
    <hr>
    {{#if errors}}
        <ul>
            {{#each errors }}
                <li>{{this.msg}}</li>
            {{/each }}
        </ul>
    {{/if}}
    <form class="from-control" action="/tasks/add" method="post">
        <div class="from-group">
            <label for="task">Task Name: </label>
            <input type="text" name="task" id="task" value="">
        </div>
        <button type="submit" name="button">Submit</button>
    </form>

</div>
